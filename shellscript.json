{
	// Place your snippets for shellscript here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }
	"add shebang": {
		"scope": "#!",
		"prefix": "shebang",
		"body": [ 
			"#!/bin/bash",
		],
		"description":  "adds shebang script head"
	}
	"add case statement": {
		"scope": "sh",
		"prefix": "case",
		"body": [
			"case $var in",
				"{testitems} )",
					"# code if match",
					";;",
				"{testitems} )",
					"# code if match",
					";;",
				"{testitems} )",
					"# code if match",
					";;",
				"*) # default case",
					"# code if default case",
					";;",
			"esac",
		],
		"description": "adds case statement structure"
	}

	"user prompt": {
		"scope": "sh",
		"prefix": "promptusers",
		"body": [
			"read -p '{user prompt}: ' var",
		],
		"description": "adds user prompt"
	}

	"add and-or triple test": {
		"scope": "sh",
		"prefix": "andortriple",
		"body": [
			"if [[ {andtest} ]] && ( [[ {oroption1} ]] || [[ { oroption1} ]] ); then",
				"# code if true",
			"else",
				"#code if false",
			"fi",	
		],
		"description": "adds IF-ELSE test with one AND and two OR options"
	}
}
